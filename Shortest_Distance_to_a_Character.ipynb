      ],
      "source": [
        "def shortestToChar(s, c):\n",
        "        ids = [i for i in range(len(s)) if s[i] == c]\n",
        "        return [min([abs(i-id_) for id_ in ids]) for i in range(len(s))]\n",
        "\n",
        "\n",
        "s = \"loveleetcode\"\n",
        "c = \"e\"\n",
        "print(shortestToChar(s, c))"
      ]
